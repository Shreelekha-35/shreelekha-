// 1. char at the given index 

package com.shreelekha;

public class CharEx1 {

	public static void main(String[] args) 
		{
			String str = "string is immutable";
			System.out.println("Original String = " + str);
			int index1 = str.charAt(1);
			int index2 = str.charAt(11);
			System.out.println("The character at position 1 is " + (char)index1);
			System.out.println("The character at position 11 is " + (char)index2);
		}

}


// 2. First letter into Capital for given string

package com.shreelekha;

public class UpperCase {

	public static void main(String[] args) {
		String s = "java is platform independent";
		String[] arr = s.split(" ");
		for (int i = 0;i < arr.length; i++) {
			char c = arr[i].charAt(0);
			String c1 = String.valueOf(c).toUpperCase();
			String sub = arr[i].substring(1);
			System.out.println(c1 + sub + " ");

		}
		
	}

}



// 3. Sequence of char values

package com.shreelekha;

public class Match {

	public static void main(String[] args) {
		String a = "Welcome to Careertuner";
		String b = "Welcome to Careertuner";
		System.out.println(a.matches(b));

	}

}



//  4. String ends with the contents of another string


package com.shreelekha;

public class EndswWith {

	public static void main(String[] args) {
		String x = "Shreelekha";
		String y = "kha";
		System.out.println(x.endsWith(y));

	}

}



// 5. Count the number of words in the string

package com.shreelekha;

public class noofStrings {

	public static void main(String[] args) {
		String str = "Count the nummber of words present in the string";
		int count = 1;
		for(int i = 0;i<str.length() - 1;i++)
		{
			if((str.charAt(i) == ' ') && (str.charAt(i+1)!= ' '))
			{
				count++;
			}
		}
		System.out.println("Number of words in a string : " + count);

	}

}


// 6. Capital letters from string

package com.shreelekha;

public class CapitalLetters {

	public static void main(String[] args) {
		String a ="welcome to java program";
		System.out.println(a.toUpperCase());

	}

}


// 7. Second Occurance into capital

package com.shreelekha;

public class SecondOccurance {

	public static void main(String[] args) {
		String a = "bvrit college";
		int index = 9;
		char ch = 'l';
		String replaceString = a.replace("ll", "lL");
		System.out.println(replaceString);

	}

}

// 8. Small letter to Capital letter

package com.shreelekha;

public class smalltoCapital {

	public static void main(String[] args) {
		String s = "b.v.raju college";
		String replaceString = s.replace("raju", "RAJU");
		System.out.println(replaceString);

	}

}




